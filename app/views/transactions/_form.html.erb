<%= bootstrap_form_for(transaction) do |f| %>
  <%= f.hidden_field :transaction_type %>
  <%= f.hidden_field :account_id %>
  <%= f.date_field :date %>

  <% if transaction.transaction_type == 'transfer' %>
    <%= f.select :transfer_to_account_id, Account.all.pluck('name', 'id') %>
  <% else %>
    <%= f.text_field :category, list: 'categories' %>
  <% end %>

  <%= f.number_field :amount %>
  <%= f.text_area :comments %>
  <%= f.submit %>
<% end %>

<datalist id="categories">
  <% Transaction.all.order(:category).pluck('category').uniq.each do |c| %>
    <option value=<%= c %>>
  <% end %>
</datalist>
